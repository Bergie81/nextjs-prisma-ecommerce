// npx prisma migrate dev - to create local development database
// npx prisma studio - visual interface for database

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(cuid())
  firstName String
  lastName  String
  email     String
  products  Product[]
  reviews   Review[] // Auto-generated by VS Code plugin
}

model Product {
  id          String   @id @default(cuid()) // Generate unique ID - better than just auto increment integer id Int @id @default(autoincrement())
  name        String
  description String
  image       String // A link
  price       Int // Better for math than float
  users       User[] // Many to many relation
  reviews     Review[] // Auto-generated by VS Code plugin
}

model Review {
  id        String  @id @default(cuid())
  rating    Int
  text      String
  user      User    @relation(fields: [userId], references: [id]) // Auto-generated by VS Code plugin
  userId    String // Auto-generated by VS Code plugin
  product   Product @relation(fields: [productId], references: [id]) // Auto-generated by VS Code plugin after saving "product Product"
  productId String
}
